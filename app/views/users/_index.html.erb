<table>
    <thead>
        <tr>
            <th>投稿者名</th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody id="book">
    <% users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%#= book.title %></td>
        <td><%#= book.body %></td>
        <td><%= link_to "詳細", user_path(user) %></td>
        <% if user == current_user %>
          <td><%= link_to "編集", edit_user_path(user) %></td>
          <td><%= link_to "削除", user_path(user), method: :delete, remote: true %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
</table>